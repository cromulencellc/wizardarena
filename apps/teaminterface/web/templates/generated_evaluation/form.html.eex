<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :connect, class: "control-label" %>
    <%= number_input f, :connect, class: "form-control" %>
    <%= error_tag f, :connect %>
  </div>

  <div class="form-group">
    <%= label f, :success, class: "control-label" %>
    <%= number_input f, :success, class: "form-control" %>
    <%= error_tag f, :success %>
  </div>

  <div class="form-group">
    <%= label f, :timeout, class: "control-label" %>
    <%= number_input f, :timeout, class: "form-control" %>
    <%= error_tag f, :timeout %>
  </div>

  <div class="form-group">
    <%= label f, :time, class: "control-label" %>
    <%= number_input f, :time, class: "form-control" %>
    <%= error_tag f, :time %>
  </div>

  <div class="form-group">
    <%= label f, :memory, class: "control-label" %>
    <%= number_input f, :memory, class: "form-control" %>
    <%= error_tag f, :memory %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
